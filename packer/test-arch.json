{
  "variables": {
    "headless": "false",
    "firmware": "efi",
    "cpus": "2",
    "memory": "1024"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "test-arch",
      "output_directory": "target/test-arch",
      "iso_url": "http://mirror.rackspace.com/archlinux/iso/2020.08.01/archlinux-2020.08.01-x86_64.iso",
      "iso_checksum": "sha1:50f6eeecd84aea8ea8cf3433fcc126eb396ed640",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "http_directory": "http",
      "boot_wait": "10s",
      "boot_command": [
        "<enter><wait10><wait10><wait10>",
        "curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/init.sh<enter><wait5>",
        "bash init.sh<enter>"
      ],
      "ssh_username": "user",
      "ssh_password": "user",
      "ssh_timeout": "15m",
      "shutdown_command": "echo 'user' | sudo -S shutdown -P now",
      "headless": "{{ user `headless`}}",
      "iso_interface": "sata",
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "disk_size": 10240,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--vrde", "off"],
        ["modifyvm", "{{.Name}}", "--vram", "32"],
        ["modifyvm", "{{.Name}}", "--firmware", "{{user `firmware`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["SKIP_ASK_PASS=true ./.archlinux-setup/run.sh"]
    }
  ]
}
